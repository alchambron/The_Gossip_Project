<h1>Editer le Gossip</h1>

<%= form_for @gossip do |x| %>
  
  <div class="form-group">
    <label>Titre du Gossip</label>
    <%= x.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Contenu du Gossip</label>
    <%= x.text_area :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <button type="submit">Modifier le Gossip</button>
  </div>

<% end %>
